# Auth Service 설정
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8008
LOG_LEVEL=INFO
PYTHONUNBUFFERED=1
ENVIRONMENT=production

# 데이터베이스 설정 (Railway PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:password@centerbeam.proxy.rlwy.net:27090/railway

# 데이터베이스 연결 풀 설정
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_POOL_PRE_PING=true
DB_ECHO=false

# JWT 설정
JWT_SECRET_KEY=your_super_secret_jwt_key_here_change_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# 보안 설정
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=6

# 로깅 설정
LOG_FORMAT=json
LOG_LEVEL=INFO

# CORS 설정
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true

# 세션 설정
SESSION_TIMEOUT_MINUTES=30
MAX_SESSIONS_PER_USER=1

# Railway 환경 설정
RAILWAY_ENVIRONMENT=true
RAILWAY_SERVICE_NAME=auth-service
